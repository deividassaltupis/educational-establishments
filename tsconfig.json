{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react-jsx",
    "module": "ESNext",
    "rootDir": "src",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
